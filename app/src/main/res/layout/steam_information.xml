<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".SteamID"
    android:background="@drawable/bg2"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STEAM ID INFORMATION"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID STEAM"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your ID"
        android:id="@+id/id"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NICKNAME"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/nick"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your NickName"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qoute Of The Day"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/qoute"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Qoute"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorite Hero"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/hero"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Best Hero Win Rate"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btntambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="TAMBAH" />

        <Button
            android:id="@+id/btntampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="TAMPIL" />

        <Button
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="EDIT" />

        <Button
            android:id="@+id/btnhapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="HAPUS" />
    </LinearLayout>
</LinearLayout>